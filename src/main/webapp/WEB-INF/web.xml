<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Stratego</display-name>


    <context-param>
        <!-- The base URL for the application. This is read by servlets and JSPs in order
             to set correct URLs for the app -->
        <param-name>siteURL</param-name>
        <param-value>http://localhost:8080/Stratego-1.0</param-value>
    </context-param>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>org.games.stratego.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>org.games.stratego.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>NewUser</servlet-name>
        <servlet-class>org.games.stratego.controller.NewUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewUser</servlet-name>
        <url-pattern>/newUser</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>OpenGame</servlet-name>
        <servlet-class>org.games.stratego.controller.OpenGame</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewUser</servlet-name>
        <url-pattern>/newUser</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>NewUser</servlet-name>
        <servlet-class>org.games.stratego.controller.NewUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewUser</servlet-name>
        <url-pattern>/newUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Game</servlet-name>
        <servlet-class>org.games.stratego.controller.Game</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Game</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>

    <!-- Define a session timeout to 15 minutes -->
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    
